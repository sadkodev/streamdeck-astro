{
	"extends": "astro/tsconfigs/strict",
	"include": [".astro/types.d.ts", "./src/env.d.ts", "**/*"],
	"exclude": ["dist"],
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"],
			"@components/*": ["./src/components/*"],
			"@layouts/*": ["./src/layouts/*"],
			"@pages/*": ["./src/pages/*"],
			"@utils/*": ["./src/utils/*"],
			"@styles/*": ["./src/styles/*"],
			"@shared/*": ["./src/shared/*"],
			"@client/*": ["./src/client/*"],
			"@actions/*": ["./src/actions/*"]
		}
	}
}
